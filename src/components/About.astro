---
const { data, titles } = Astro.props;
---

<section>
    <header class="title">{titles.about_me}</header>
    <div class="about-container">
        <!-- <p>{data.about}</p> -->
        <div class="img-container">
            <img src={data.img} alt="Eric Chavarria" class="img" />
        </div>
    </div>
</section>
<style>
    .title {
		color: #051937;
		font-size: 40px;
	}
    .about-container {
        margin-top: 80px;
        margin-bottom: 80px;
    }
    .img {
        /* transform: rotate(0.035turn); */
        transform: rotate(25deg);
    }
    .img-container {
        background-color: #051937;
        width: 400px;
        left:-2%;
        position: relative;
        transform: rotate(-10deg);
    }
    .img-container::before {
        content: "";
        position: absolute;
        width: 400px;
        height: 100%;
        top: -5px;
        left: 9%;
        /* transform: rotate(0.015turn); */
        transform: rotate(10deg);
        background-image: url("../../public/circuits.png");
    }
</style>
