---
const { data } = Astro.props;
---

<section>
    <header class="title" id="projects">Proyectos</header>
    {
        data.map((item) => (
            <div class="container">
                <div class="info-container">
                    <img
                        class="image-proyect"
                        alt="image_proyect"
                        src="https://blog.openclassrooms.com/es/wp-content/uploads/sites/5/2017/09/AdobeStock_126016889apaisado-710x367.jpg"
                    />
                </div>
                <div class="info-container info">
                    <h3 class="title-proyect">{item.title}</h3>
                    <div>
                        {item.stack.map((img) => (
                            <img class="image-stack" alt="icon" src={img} />
                        ))}
                    </div>
                    <p class="description">{item.description}</p>
                    <div>
                        {item.code && <button class="button">code</button>}
                        {item.page && <button class="button">preview</button>}
                        
                    </div>
                </div>
            </div>
        ))
    }
</section>
<style>
    .container {
        display: flex;
        align-items: center;
    }
    .container div {
        flex: 1;
        margin: 15px 0;
    }
    .image-proyect {
        width: 450px;
        height: 250px;
        border-radius: 15px;
    }
    .info-container {
        width: 450px;
        height: 250px;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 30px 0 !important;
    }
    .info {
        display: block;
    }
    .description {
        width: 80%;
        display: inline-block;
    }
    .title {
        color: #051937;
        font-size: 40px;
    }
    .title-proyect {
        color: #051937;
        font-size: 25px;
        margin-top: 0;
    }
    .button {
        background-color: #051937;
        color: azure;
        border-radius: 15px;
        padding: 8px 45px;
        border: none;
    }

    .image-stack {
        margin: 0 10px;
        width: 40px;
        height: 40px;
    }
    @media screen and (max-width: 1000px) {
        .container {
            flex-direction: column;
        }

        .title {
            margin-left: 40px;
        }
        @media screen and (max-width: 730px) {
            .info-container {
                width: 90%;
            }
        }
        .image-proyect {
            width: 100%;
            height: 250px;
        }
    }
</style>ÃŸ
