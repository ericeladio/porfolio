---
import TranslateIcon from "./TranslateIcon.astro";
const { data, stylesNav, styleA } = Astro.props;
---

<nav class={stylesNav}>
    <a class={styleA} href={data.direction["home"]}>{data.nav["home"]}</a>
    <a class={styleA} href="#experience">{data.nav["experience"]}</a>
    <a class={styleA} href="#projects">{data.nav["projects"]}</a>
    <a class={styleA} href="#about">{data.nav["about_me"]}</a>
    <TranslateIcon lang={data.nav["lang"]} />
</nav>

<style>
    .nav {
        display: flex;
        justify-content: space-between;
    }
    .hamburgerNav{
        display: none;
    }

    .hamburger {
        display: block;
        font-family: "Open Sans", sans-serif;
        color: white;
        font-weight: bold;
        font-size: 1.2rem;
        text-decoration: none;
        border-bottom: 1px solid black;
        padding-bottom: 0.5rem;
    }

    .hamburger :hover,
    .hamburger :focus {
        border-bottom: 1px solid white;
    }


    @media screen and (max-width: 1000px) {
        .nav {
            justify-content: space-around;
        }
    }
    @media screen and (max-width: 730px) {
        .nav{
            display: none;
        } 
        .hamburgerNav{
        display: block;
    }
    }
    
</style>
